{
    "manifest_version": 3,
    "name": "Chatlink",
    "description": "Gets link to specific Google Chat without forwarding to email",
    "version": "0.1",
    "action": {
        "default_icon": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": [
                "https://*.google.com/*", "https://*.google.com/*/*", "https://*.google.com/*/*/*"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
}